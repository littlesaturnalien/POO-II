<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp">

    <TextView
            android:id="@+id/tvTituloINSS"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Cálculo del INSS (7%)"
            android:textSize="18sp"
            android:textStyle="bold"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

    <EditText
            android:id="@+id/etSalario"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:hint="Ingrese salario bruto en C$ Córdobas"
            android:inputType="numberDecimal"
            android:layout_marginTop="12dp"
            app:layout_constraintTop_toBottomOf="@id/tvTituloINSS"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

    <Button
            android:id="@+id/btnCalcularINSS"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Calcular INSS"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@id/etSalario"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

    <TextView
            android:id="@+id/tvResultadoINSS"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text=""
            android:textSize="16sp"
            android:textStyle="italic"
            android:layout_marginTop="12dp"
            app:layout_constraintTop_toBottomOf="@id/btnCalcularINSS"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
